# Production deployment settings
# Copy this file to .env and update the values

# Django Configuration
SECRET_KEY=your-production-secret-key-here
DEBUG=False
ALLOWED_HOSTS=your-domain.com,your-app.onrender.com

# Database Configuration (for production with PostgreSQL)
DATABASE_URL=postgres://user:password@host:port/dbname

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Cache Configuration (Redis for production)
REDIS_URL=redis://localhost:6379/1

# Geolocation API (get free key from ip-api.com or ipgeolocation.io)
IPGEOLOCATION_API_KEY=your-api-key-optional

# Email Configuration (for notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=ryanniiakweibrown1@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
CORS_ALLOW_ALL_ORIGINS=False

# Rate Limiting (set to True when Redis is available)
RATELIMIT_ENABLE=True
